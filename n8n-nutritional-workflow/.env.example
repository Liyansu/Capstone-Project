# N8N Nutritional Planning Workflow Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# N8N Configuration
# =============================================================================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_password_here
N8N_ENCRYPTION_KEY=your-32-character-encryption-key-here
N8N_JWT_SECRET=your-jwt-secret-key-here
WEBHOOK_URL=https://your-domain.com

# =============================================================================
# Database Configuration
# =============================================================================
DB_TYPE=postgres
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=your_postgres_password_here

# Redis Configuration
QUEUE_BULL_REDIS_HOST=redis
QUEUE_BULL_REDIS_PORT=6379
QUEUE_BULL_REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# Telegram Bot Configuration
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/nutritional-planning

# =============================================================================
# Computer Vision API Configuration
# =============================================================================
# Choose one of the following APIs:

# Hugging Face (Recommended for beginners)
HUGGING_FACE_API_KEY=your_hugging_face_api_key_here
HUGGING_FACE_MODEL_NAME=microsoft/food-101

# AWS SageMaker (For advanced users)
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
SAGEMAKER_ENDPOINT_NAME=your_sagemaker_endpoint_name_here

# Google Vision API
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/google-credentials.json
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id_here

# Custom API
CUSTOM_API_URL=https://your-custom-api.com/food-recognition
CUSTOM_API_KEY=your_custom_api_key_here

# =============================================================================
# Python Service Configuration
# =============================================================================
PYTHON_SERVICE_URL=http://python-service:8000
PYTHON_SERVICE_API_KEY=your_python_service_api_key_here

# =============================================================================
# Monitoring and Logging
# =============================================================================
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console,file
N8N_LOG_FILE_LOCATION=/home/node/.n8n/logs/n8n.log

# Prometheus Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana Configuration
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# =============================================================================
# Security Configuration
# =============================================================================
# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=15

# =============================================================================
# Performance Configuration
# =============================================================================
N8N_MAX_EXECUTION_TIMEOUT=3600
N8N_DEFAULT_BINARY_DATA_MODE=filesystem
N8N_BINARY_DATA_TTL=24

# Python Service Performance
PYTHON_WORKERS=4
PYTHON_MAX_REQUESTS=1000
PYTHON_TIMEOUT=30

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_FOOD_RECOGNITION=true
ENABLE_MEAL_PLANNING=true
ENABLE_PROGRESS_TRACKING=true
ENABLE_SAFETY_WARNINGS=true
ENABLE_ANALYTICS=true

# =============================================================================
# External Services
# =============================================================================
# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here

# SMS Service (for notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# =============================================================================
# Development Configuration
# =============================================================================
# Set to true for development mode
DEVELOPMENT_MODE=false
DEBUG_MODE=false
ENABLE_SWAGGER_UI=true

# =============================================================================
# Backup and Recovery
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket-name
BACKUP_S3_REGION=us-east-1

# =============================================================================
# Custom Configuration
# =============================================================================
# Add any custom environment variables here
CUSTOM_FOOD_DATABASE_URL=your_custom_food_database_url_here
CUSTOM_NUTRITION_API_KEY=your_custom_nutrition_api_key_here
CUSTOM_MEAL_PLANNING_ALGORITHM=advanced