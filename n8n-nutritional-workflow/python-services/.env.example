# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Service URLs
PYTHON_SERVICE_URL=http://localhost:5000
DIETARY_SERVICE_URL=http://localhost:5001

# Service Ports
FOOD_ANALYZER_PORT=5000
DIETARY_PLANNER_PORT=5001

# Model Configuration (Optional - for production)
FOOD_MODEL_PATH=/path/to/food_recognition_model.pth
PORTION_MODEL_PATH=/path/to/portion_estimation_model.pth
USE_GPU=true

# Hugging Face Configuration (Optional)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=nateraw/food

# Database Configuration (Optional)
NUTRITION_DB_URL=postgresql://user:password@localhost:5432/nutrition_db
REDIS_URL=redis://localhost:6379/0

# AWS Configuration (Optional - for SageMaker)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
SAGEMAKER_ENDPOINT=your_sagemaker_endpoint

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/service.log

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Feature Flags
ENABLE_ALLERGY_DETECTION=true
ENABLE_PORTION_ESTIMATION=true
ENABLE_NUTRITION_TRACKING=true
